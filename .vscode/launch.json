{
    "configurations": [
        {
            "cwd": "${workspaceRoot}",
            "name": "Launch via Picoprobe",
            "preLaunchTask": "Build using make",
            "executable": "./out/minimal_pico.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "gdbPath": "gdb-multiarch",
            "device": "RP2040",
            "configFiles": [
                "interface/picoprobe.cfg",
                "target/rp2040.cfg"
            ],
            "svdFile": "~/pico/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "runToMain": true,
            "searchDir": ["~/pico/openocd/tcl"]
        }
    ]
}